				<dtd publicId="-//XINS//DTD XINS Project 1.1//EN"
				     location="${xins_home}/src/dtd/xins-project_1_1.dtd" />
				<dtd publicId="-//XINS//DTD XINS API 1.1//EN"
				     location="${xins_home}/src/dtd/api_1_1.dtd" />
